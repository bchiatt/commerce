doctype html
html
head
    meta(charset-"UTF-8")
    title
    link(rel="stylesheet", href='/css/styles.css')
body
  nav
    ul
      li: a(href="/") Home
      li: a(href="/about") About
      li: a(href="/faq") FAQ
      li: a(href="/items/new") Add Item
      li: a(href="/items") List All Items
 .forms
   form(method='post', action='/items')
     label Name
     input(name='name', type='text', placeholder='iphone', autofocus=true)
     label Length
     input(name='dimensions[l]', type='number', placeholder='20')
     label Width
     input(name='dimensions[w]', type='number', placeholder='20')
     label Height
     input(name='dimensions[h]', type='number', placeholder='20')
     label Weight
     input(name='weight', type='number', placeholder='20')
     label Color
     input(name='color', type='color')
     label Quantity
     input(name='quantity', type='number', placeholder='2')
     label MSRP
     input(name='msrp', type='number', placeholder='499.99')
     label Percent Off
     input(name='percentOff', type='number', placeholder='20')
     button Add Item To Database


